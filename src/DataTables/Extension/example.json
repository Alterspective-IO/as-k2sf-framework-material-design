{
    "currentRowDataK2Control": "Text Area RowData",
    "saveK2Control": "DataGridSave",
    "k2RuleForEachUpdated": "SaveItem",
    "k2RuleForEachCreated": "",
    "k2RuleForEachDeleted": "",
    "enabled": true,
    "elevation": "21",
    "minHeight": "450",
    "optGrid": {
        "rowHeight": 52,
        "pageOptions": {
            "useClient": true,
            "perPage": 12
        },
        "rowHeaders": [
            "checkbox"
        ],
        "scrollX": false,
        "scrollY": false,
        "columns": [
            {
                "name": "Id",
                "k2Control": "Text Box Id",
                "header": "Id",
                "hidden":true
            },
            {
                "name": "start",
                "k2Control": "Text Box start",
                "header": "Start",
                "sortable": true,
                "resizable": true,
                "formatter": "new Date(props.value).toDateString()",
                "editor": "datePicker",
                "filter": {
                    "type": "date",
                    "options": {
                        "format": "yyyy.MM.dd"
                    }
                }
            },
            {
                "name": "carMake",
                "header": "Car Make",
                "k2Control": "Text Box carMake",
                "formatter": "props.value.toString().toUpperCase()",
                "filter": "text",
                "editor": {
                    "type": "select",
                    "options": {
                        "listItems": [
                            {
                                "text": "Porsche",
                                "value": "Porsche"
                            },
                            {
                                "text": "Mazda",
                                "value": "Mazda"
                            },
                            {
                                "text": "Toyota",
                                "value": "Toyota"
                            }
                        ]
                    }
                },
                "sortable": true,
                "rowSpan": true,
                "resizable": true
            },
            {
                "name": "carModel",
                "header": "Car Model",
                "k2Control": "Text Box carModel",
                "editor": "text",
                "filter": "text",
                "sortable": true,
                "rowSpan": true,
                "resizable": true
            },
            {
                "name": "contactFirstName",
                "k2Control": "Text Box firstName",
                "header": "First Name",
                "sortable": true,
                "filter": {
                    "type": "text",
                    "showApplyBtn": true,
                    "showClearBtn": true,
                    "rowSpan": true,
                    "resizable": true
                }
            },
            {
                "name": "slider",
                "header": "Slider",
                "k2Control": "Text Box Silder",
                "renderer": {
                    "type": "CustomSliderRenderer",
                    "options": {
                        "min": 0,
                        "max": 30
                    }
                }
            },
            {
                "name": "action",
                "header": "Action",
                "renderer": {
                    "type": "CustomButtonRenderer",
                    "options": {
                        "toggleValueOnClick": true,
                        "targetColumn": "browser",
                        "icon": "code",
                        "outlined": false,
                        "raised": true,
                        "trailingIcon": true,
                        "label": "Approve",
                        "k2Rule": "ApprovedClicked",
                        "style": {
                            "width": "100%"
                        }
                    }
                }
            },
            {
                "header": "BROWSER",
                "name": "browser",
                "k2Control": "Text Box Approved",
                "formatter": "((props.value==1) ? `<div style='display:flex;align-content:center;justify-content:center'><img height='45px' src='https://cdn-icons-png.flaticon.com/512/4157/4157035.png' /></div>` :  ((props.value==0)?`<div style='display:flex;align-content:center;justify-content:center'><img height='45px' src='https://cdn-icons-png.flaticon.com/512/3712/3712216.png' /></div>`:'undecided'))",
                "editor": {
                    "type": "radio",
                    "options": {
                        "listItems": [
                            {
                                "text": "Approve",
                                "value": 1
                            },
                            {
                                "text": "Decline",
                                "value": 0
                            },
                            {
                                "text": "Undecided",
                                "value": 2
                            }
                        ]
                    }
                }
            }
        ]
    },
    "theme": {
        "pagination": {
            "background": "#363640",
            "text": "red"
        },
        "area": {
            "body": {
                "background": "#363640"
            },
            "header": {
                "background": "#363640",
                "border": "rgba(255,255,255,0.12)"
            }
        },
        "selection": {
            "background": "white",
            "border": "white"
        },
        "scrollbar": {
            "background": "",
            "thumb": "#d9d9d9",
            "active": "#green"
        },
        "row": {
            "even": {
                "background": "",
                "text": ""
            },
            "odd": {
                "background": "",
                "text": ""
            },
            "hover": {
                "background": "rgba(255,255,255,0.1)"
            }
        },
        "cell": {
            "normal": {
                "background": "",
                "text": "rgba(255,255,255,1)",
                "border": "rgba(255,255,255,0.12)",
                "showVerticalBorder": true
            },
            "header": {
                "background": "",
                "text": "rgba(255,255,255,0.6)",
                "border": "rgba(255,255,255,0.12)",
                "showVerticalBorder": true
            },
            "rowHeader": {
                "background": "",
                "border": "",
                "text": "",
                "showVerticalBorder": true
            },
            "editable": {
                "background": ""
            },
            "selectedHeader": {
                "background": "rgba(255,255,255,0.1)"
            },
            "focused": {
                "border": "Brown"
            },
            "disabled": {
                "text": "#b0b0b0"
            }
        }
    }
}