    "type": "git",
    "url": "https://github.com/alterspective-io/as-k2sf-framework-material-design.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "Collection of material design custom components",
  "main": "/dist/main.alterspective.materialdesignforK2.js.js",
  "types": "/build/src/index.d.ts",
  "scripts": {
    "deploy": "ts-node-esm uploadToAzure.mts",
    "clean-files": "concurrently \"rimraf build\" \"rimraf dist\"",
    "build": "npm run clean-files && webpack",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.jpg  src/**/*.scss build/",
    "start": "concurrently \"rimraf build\" \"rimraf dist\" && npm run copy-files && webpack ",
    "test": "jest",
    "test:validate": "node tests/simple-validation.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:install": "npm install --save-dev @playwright/test @types/node --legacy-peer-deps && npx playwright install"
  },
  "keywords": [
    "K2",
    "UX",
    "Simplied"
  ],
  "author": "Igor Jericevich",
  "license": "MIT",
